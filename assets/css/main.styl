.form
	max-width 860px
	display block
	margin 0px auto
	@media screen and (max-width: 767px)
		padding 0px 10px
	
	&__group
		width calc(50% - 32px)
		margin-right 32px		
		display inline-block
		position relative
		
		&--second
			width 50%
			margin-right 0px
			
		&--fullwidth
			width 100%
			margin-right 0px

	&__input
		border: 1px solid #d7d7d7;
		border-radius: 4px;
		height: 56px;
		color: #383838;
		font-family: light-font
		font-size: 1.8rem
		font-weight: 400;
		padding-left 25px
		outline none
		width 100%
		
		&:focus,:hover
			border: 1px solid #383838;
			
		&:focus:invalid
			border: 2px solid #f57a82;
			
		&:focus:invalid + span
			display inline-block

		&--textarea
			padding-top 25px
			width 100%
			margin-right 0px
			margin-top 27px
			height 200px
			
	&__error
		position absolute
		bottom: -20px;
		left: 25px;
		color: #ed5276;
		font-family: light-font
		font-size: 1.2rem
		font-weight: 400;
		text-transform uppercase
		text-transform: uppercase;
		display none
			
	&__submit
		background-color: #ed5276;
		border-radius: 4px;
		border 0px 
		outline none
		color: white;
		font-family: additional-font
		font-size: 2.5rem
		font-weight: 700;
		letter-spacing 2px 
		padding: 1rem 2rem;
		margin-top 59px
					
.footer
	
	&__link
