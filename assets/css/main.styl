// Fonts
base-font = "ralewaylight"
thin-font = "ralewaythin" // Works for font-weight 300
light-font = 'ralewayextralight' // Works for font-weight 400
additional-font = 'Oxygen' // All weights included
				
*, *:after, *:before
	box-sizing: border-box

html, body
	margin 0px
	font-family base-font
	font-size 10px
	height 100%

// Блок шапка с цветной подложкой, слоганом и кнопкой.
.header
	height 100%
	background url('../images/headerbg.jpg')
	position relative
	z-index 100
	background-size cover
	
	// Можно определить цвет в шапке
	&__redcontainer
		width 100%
		height 100%
		position absolute
		top 0px 
		left 0px
		background rgba(245,122,130,0.8)
		mix-blend-mode multiply
	
	&__slogan
		vertical-align middle
		color: #f7f3ea;
		font-size: 3.5rem
		font-weight: 300;
		font-family: thin-font
		text-align center
		transform: translateX(50%) translateY(50%);
		position: absolute;
		right: 50%;
		bottom: 50%;
		max-width: 867px;
		@media screen and (max-width: 767px)
			font-size 2.5rem
		
	&__button
		text-transform uppercase
		color white
		padding 1rem 2rem
		font-size 2.5rem
		text-decoration none
		border: 2px solid white;
		border-radius: 4px;
		font-family additional-font
		font-weight: 700;
		letter-spacing 3px
		display inline-block 
		margin-top 54px
		
		&:hover
			transition 0.33s all
			background-color: white;	
			color: #f57a82

	// Блок навигации в шапке			
	.nav
		position absolute
		top 59px
		z-index 100
		right 22px
		@media screen and (max-width: 767px)
			position fixed
			width 100%
			height 70px
			background alpha(#fff, 0.9)
			top 0px
			right 0px
			box-shadow 0 0 2px black
			
		// Кнопка вызова меню
		&__openMenu
			display none
			
			@media screen and (max-width: 767px)
				margin: 0px auto;
				display: block;
				text-align: center;
				line-height: 70px;
				color #383838
				font-family additional-font
				font-size 2rem
				text-decoration none
				font-weight 300
				letter-spacing 2px 
		
		// Само меню
		.menu
			@media screen and (max-width: 767px)
				background-color: white;
				top: 60px;
				position: absolute;
				width 100%
				display block
				padding-left 0px
				display none
				
			&--visible
				display block
			
			&__element
				padding 0.5rem 1.4rem
				margin-right 28px
				text-transform: uppercase;
				color: white;
				font-size: 1.6rem
				font-weight: 400;	
				font-family light-font
				text-decoration none
				@media screen and (max-width: 767px)
					width 100%
					display block
					color #383838
					text-align center
					padding 1rem 1.4rem
				
				&:last-child
					margin-right 17px
				
				&--active
					border 1px solid white;
					border-radius: 4px;
					
					&:hover
						background white
						color #383838
						transition 0.3s all
					
				&:hover
					box-shadow: 0 0 1px #fff;
					
		&--fixed
			position fixed
			width 100%
			height 70px
			background alpha(#fff, 0.9)
			top 0px
			right 0px
			box-shadow 0 0 2px black
			animation showFromtTop 0.3s 
			
			.menu
				line-height: 56px;
				float right
			
				.menu__element
					color black 
					
					&--active
						border 1px solid black;
						border-radius: 4px;
						
					&:hover
						box-shadow: 0 0 1px #fff;

// Sections
.section
	padding-top 100px
	text-align center
	overflow hidden
	
	// Модификаторы под каждый раздел
		
	&--service
		background-color: #5db5a4;
		min-height 747px
		@media screen and (max-width: 767px)
			padding 100px 10px 0px 10px
			
	&--team
		min-height 914px;
		background #eefafb;
		padding 100px 0px 50px 10px	
		
	&--skills
		padding-bottom 100px
		background-color: white;
		text-align center
		
	&--portfolio
		background black
		font-size 0px
		
	&--reviews
		background-color: #ed5276;
		
	&--contactForm
		min-height 819px;
		@media screen and (min-width: 768px) and (max-width: 1024px)
			padding 109px 10px 0px 10px
	
	&--blog
		background-color: #e7e7e7;
		text-align left
		padding-bottom 40px

	&--footer
		min-height: 212px
		background-color: #e7e7e7;
		padding-top 10px
		
	// Элементы
	&__title
		font-family: additional-font
		font-size: 3.8rem
		font-weight: 300;
		margin 0px
		text-align center
		letter-spacing 10px
		
		&--service
			color white
			
		&--team
			color: #383838;
			
		&--skills
			color: #383838;
		
		&--reviews
			color: white
			
		&--portfolio
			color white
			
		&--contactForm
			color: #383838;
			
		&:after
			content " "
			width 6%
			height 4px
			background alpha(#fff, 0.3)
			display block
			margin 14px auto 0px auto
			
	&__subtitle
		font-family: light-font
		font-size: 1.8rem
		font-weight: 400;
		max-width 709px
		text-align center
		margin 33px auto 71px auto
		
		&--service
			color white
			
		&--team
			color: #383838
			
		&--skills
			color: #383838
			
		&--reviews
			color white
			
		&--portfolio
			color white
			
		&--contactForm
			color: #383838;
			
		&--footer
			color: #b2b2b2;
			font-size: 1.6rem
			text-transform: uppercase;
			margin-bottom 41px
		
